CodeGenerator {
  ast          = [%:x] -> x
  instructions = [first:x rest*:xs] -> { x xs }
  first        = ast:x              -> { "if "   x }
  rest         = ast:x              -> { "elif " x }

  VM           = [ast:x] instructions:y .:z -> z:macros -> #List():enum -> {
                   enum x >
                     "while True:\n" >
                       "name, arg1, arg2 = instructions[pc]\n"
                       y
                       "else:\n" >
                         "raise Exception(\"unknown instruction {}\".format(name))\n"
                       <
                     <
                   <
                 }
  Def          = .:name .:rest [ast*:body] -> { "def " name rest > body < }
  Instruction  = .:name [ast*:body] -> enum({name " = " #len(enum) "\n"}) -> { "name == " name ":\n" > body < }
  Line         = .:line
  Macro        = .:name .:indentprefix -> { > macros(name) < }
}
